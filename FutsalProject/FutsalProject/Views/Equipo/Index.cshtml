
@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    .item-center {
        text-align: center !important;
    }
</style>

<link href="~/lib/datatables-js/dist/css/datatables.css" rel="stylesheet" />

<h2>Index</h2>

<div class="row">
    <div class="col-lg-12">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>NombreLargo</th>
                    <th>NombreCorto</th>
                    <th>EscudoUrl</th>
                    <th>FechaAfiliacion</th>
                    <th>Borrado</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>NombreLargo</th>
                    <th>NombreCorto</th>
                    <th>EscudoUrl</th>
                    <th>FechaAfiliacion</th>
                    <th>Borrado</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts{

    <script src="~/lib/datatables-js/dist/js/datatables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#example').DataTable({
                ajax: {
                    url: '/Equipo/GetEquipos',
                    dataSrc: ''
                },
                columns: [
                    { data: 'Id' },
                    { data: 'NombreLargo' },
                    { data: 'NombreCorto' },
                    {
                        data: function (row, type, set, meta) {
                            return "Ubicación: " + row.EscudoUrl;
                        }
                    },
                    { data: 'FechaAfiliacion' },
                    {
                        data: function (row, type, set, meta) {
                            return `<div class="form-check"><input class="form-check-input" type="checkbox" value="" id="defaultCheck${meta.row}" ${(row.Borrado == true ? "checked" : "")} disabled></div>`;
                        },
                        orderable: false,
                        unsercheable: true
                    }
                ],
                columnDefs: [
                    { targets: '_all', className: "item-center" }
                ],
                initComplete: function (settings, json) {
                    var table = this.api();
                }
            });
        });
    </script>
}

