
@{
    ViewData["Title"] = "Index";
}

<style type="text/css">
    .item-center{
        text-align:center!important;
    }
</style>

<link href="~/lib/datatables-js/dist/css/datatables.css" rel="stylesheet" />

<h2>Index</h2>

<div class="row">
    <div class="col-lg-12">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Dni</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>TelefonoEmergencia</th>
                    <th>FotoUrl</th>
                    <th>IdPieHabil</th>
                    <th>FechaAfiliacion</th>
                    <th>FechaNacimiento</th>
                    <th>Borrado</th>
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Dni</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Direccion</th>
                    <th>Telefono</th>
                    <th>TelefonoEmergencia</th>
                    <th>FotoUrl</th>
                    <th>IdPieHabil</th>
                    <th>FechaAfiliacion</th>
                    <th>FechaNacimiento</th>
                    <th>Borrado</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

@section Scripts{

    <script src="~/lib/datatables-js/dist/js/datatables.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#example').DataTable({
                ajax: {
                    url: '/Jugador/GetJugadores',
                    dataSrc: ''
                },
                columns: [
                    { data: 'Id' },
                    { data: 'Dni' },
                    { data: 'Nombres' },
                    { data: 'Apellidos' },
                    { data: 'Direccion' },
                    { data: 'Telefono' },
                    { data: 'TelefonoEmergencia' },
                    {
                        data: function (row, type, set, meta) {
                            return "Ubicación: " + row.FotoUrl;
                        }
                    },
                    {
                        data: function (row, type, set, meta) {
                            var pie = "";
                            switch (row.IdPieHabil) {
                                case 2:
                                    pie = "Izquierdo";
                                    break;
                                case 3:
                                    pie = "Ambidiestro";
                                    break;
                                default:
                                    pie = "Derecho";
                                    break;
                            }
                            return pie;
                        }
                    },
                    { data: 'FechaAfiliacion' },
                    { data: 'FechaNacimiento' },
                    {
                        data: function (row, type, set, meta) {
                            return `<div class="form-check"><input class="form-check-input" type="checkbox" value="" id="defaultCheck${meta.row}" ${(row.Borrado == true ? "checked" : "")} disabled></div>`;
                        },
                        orderable: false,
                        unsercheable: true
                    }
                ],
                columnDefs: [
                    { targets: '_all', className: "item-center" }
                ],
                initComplete: function (settings, json) {
                    var table = this.api();
                }
            });
        });
    </script>

    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1">
            Default checkbox
        </label>
    </div>
}

